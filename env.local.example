# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ЮKassa Configuration
# Тестовые ключи (для разработки)
# YOOKASSA_SHOP_ID=123456
# YOOKASSA_SECRET_KEY=test_xxxxxxxxxxxxxxxxxxxx

# Боевые ключи (для продакшена)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=live_xxxxxxxxxxxxxxxxxxxx

# TON Wallet для приема платежей (опционально, для Telegram Web App)
NEXT_PUBLIC_TON_WALLET_ADDRESS=your_ton_wallet_address

# Email для получения чеков (для продавца)
NEXT_PUBLIC_EMAIL_ORDER=your_email@example.com
